{
  "extends": "./tsconfig.build.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@aries-framework/*": ["packages/*/src"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules", "build"]
}
